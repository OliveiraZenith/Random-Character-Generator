generator client {
  provider = "prisma-client-js"
  output   = "../prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Theme {
  fantasia
  medieval
  atual
}

enum RandomType {
  name
  race
  appearance
  story
}

enum Gender {
  male
  female
}

model User {
  id           Int       @id @default(autoincrement())
  name         String
  email        String    @unique
  passwordHash String    @map("password_hash")
  createdAt    DateTime  @default(now()) @map("created_at")
  worlds       World[]
  passwordResets PasswordReset[]

  @@map("users")
}

model World {
  id        Int       @id @default(autoincrement())
  userId    Int       @map("user_id")
  name      String
  theme     Theme
  country   String?   @db.VarChar(191)
  createdAt DateTime  @default(now()) @map("created_at")
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  characters Character[]
  annotations Annotation[]

  @@map("worlds")
}

model Character {
  id                Int       @id @default(autoincrement())
  worldId           Int       @map("world_id")
  name              String
  gender            Gender
  race              String
  appearance        String    @db.Text
  story             String    @db.Text
  order             Int       @default(0)
  createdAt         DateTime  @default(now()) @map("created_at")
  world             World     @relation(fields: [worldId], references: [id], onDelete: Cascade)
  characterTags     CharacterTag[]

  @@map("characters")
}

model RandomData {
  id      Int        @id @default(autoincrement())
  theme   Theme
  country String?    @db.VarChar(191)
  type    RandomType
  value   String     @db.Text
  gender  Gender?

  @@map("random_data")
}

model Annotation {
  id        Int      @id @default(autoincrement())
  worldId   Int      @map("world_id")
  title     String
  content   String   @db.Text
  order     Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  world     World    @relation(fields: [worldId], references: [id], onDelete: Cascade)

  @@map("anotacoes")
}

model Tag {
  id        Int             @id @default(autoincrement())
  name      String          @unique
  createdAt DateTime        @default(now()) @map("created_at")
  updatedAt DateTime        @updatedAt @map("updated_at")
  characterTags CharacterTag[]

  @@map("tags")
}

model CharacterTag {
  characterId Int @map("character_id")
  tagId       Int @map("tag_id")
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  tag         Tag       @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([characterId, tagId])
  @@index([tagId], map: "idx_character_tag_tag")
  @@index([characterId], map: "idx_character_tag_character")
  @@map("character_tags")
}

model PasswordReset {
  id        Int       @id @default(autoincrement())
  userId    Int       @map("user_id")
  tokenHash String    @unique @map("token_hash")
  expiresAt DateTime  @map("expires_at")
  usedAt    DateTime? @map("used_at")
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "idx_password_reset_user")
  @@map("password_resets")
}
